        }  

        .progress-step {  
            text-align: center;  
            position: relative;  
        }  

        .circle {  
            width: 60px;  
            height: 60px;  
            border-radius: 50%;  
            border: 2px solid #4caf50; /* Cor do círculo */  
            display: flex;  
            align-items: center;  
            justify-content: center;  
