<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AutoFix - Civic - Type R</title>
    <!-- Adicionando o Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Cabeçalho -->
    <header>
        <img src="/img/logo.png" alt="Logo Autofix">
    </header>

    <!-- Conteúdo da página -->
    <div class="container">
        <h1 class="title"><%= veiculo.marca %> <%= veiculo.modelo %> <img src="/img/whatsapp-logo-png-0.png" alt="WhatsApp" class="whatsapp-icon"></h1>
        <form id="service-form" action="/definir_valor_servico" method="POST">
            <% servicos.forEach(function(servico) { %>
                <div class="form-group">
                    <label for="<%= servico.nome_servico %>"><%= servico.nome_servico %></label>
                    R$
                    <input type="text" id="<%= servico.nome_servico %>" name="<%= servico.nome_servico %>" class="money-input"
                    placeholder="0,00"
                    value="<%= (typeof servico.valor_servico === 'number' && servico.valor_servico > 0 ? servico.valor_servico.toFixed(2) : '') %>"
                    oninput="formatCurrency(this); calculateTotal()">
                </div>
            <% }) %>

            <!-- Campo oculto para armazenar o valor total -->
            <input type="hidden" name="id_inspecao_manutencao" value="<%= veiculo.id_inspecao_manutencao %>">

            <div class="total-card">
                <div class="total-amount">
                    Total: <span id="total">R$ 0,00</span>
                </div>
                <div class="buttons">
                    <button type="button" class="btn btn-danger cancel-button" onclick="window.location.href = '/home_adm';">Cancelar</button>
                    <button type="submit" class="btn btn-success submit-button">Enviar</button>
                </div>
            </div>
        </form>
    </div>

<script>
    // Função para formatar o valor como moeda brasileira
    function formatCurrency(input) {
        let value = input.value;

        // Remove qualquer caractere não numérico (exceto vírgulas e pontos)
        value = value.replace(/\D/g, "");

        // Adiciona a formatação de centavos
        value = (value / 100).toFixed(2) + "";

        // Adiciona o separador de milhar
        value = value.replace(".", ",");

        // Regex para separar milhares
        value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ".");

        // Atualiza o valor no campo de entrada
        input.value = value;
    }

    // Função para calcular o total dos serviços
    function calculateTotal() {
        let total = 0;
        const inputs = document.querySelectorAll('.money-input');

        inputs.forEach(input => {
            // Remove formatação e converte para número
            let value = input.value.replace(/\D/g, ''); // Remove caracteres não numéricos
            if (value) {
                total += parseFloat(value); // Converte para número e adiciona ao total
            }
        });

        // Formata o total como moeda
        total = (total / 100).toFixed(2).replace(".", ",").replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        
        // Atualiza o elemento total
        document.getElementById('total').textContent = `R$ ${total}`;

        // Atualiza o campo oculto com o total calculado
        document.getElementById('totalValue').value = (total.replace("R$ ", "")).replace(",", ".");
    }
</script>

    <!-- Adicionando o Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
