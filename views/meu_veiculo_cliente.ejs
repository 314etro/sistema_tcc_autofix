    <style>
        body {
            font-family: 'Arvo', serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
            font-size: 16px;
        }

        .header {
            background-color: #505050;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            margin: 0 auto;
        }

        .logo img {
            height: 60px;
        }

        .content {
            padding: 20px;
        }

        .welcome {
            margin-bottom: 30px;
        }

        .welcome h2 {
            font-size: 20px;
            color: #505050;
        }

        .menu {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            border-bottom: 1px solid #ccc;
        }

        .menu a {
            padding: 10px;
            text-decoration: none;
            color: #000;
            font-weight: bold;
            border-bottom: 2px solid transparent;
        }

        .cards {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .menu a.active {
            margin: 0 auto;
        }

        h1 {
            font-size: medium;
        }

        h2 {
            font-size: larger;
            color: rgba(116, 9, 9, 0.795);
        }

        h3 {
            text-decoration: none;
            text-align: center;
        }

        .logo {
            margin: 0 auto;
        }

        .veiculo {
            display: flex;
            margin-right: 20px;
            margin-left: 20px;
            justify-content: space-between;
            border-bottom: 1px solid #ccc;
        }

        h4 {
            color: rgba(116, 9, 9, 0.795);
        }

        .icon-button {
            margin-left: 20px;
            margin-top: 10px;
            border: none;
            background: none;
        }

        .area-cliente {
            margin-left: 20px;
        }

        .icon {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            padding-right: 20px;
        }

        .icon-container {
            position: fixed;
            margin-top: 40px;
            right: 10px;
            z-index: 100;
            display: flex;
            align-items: center;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            width: 80%;
            max-width: 400px;
            border-radius: 10px;
            position: relative;
        }

        .close {
            position: absolute;
            top: 10px;
            right: 15px;
            color: #aaa;
            font-size: 28px;
            cursor: pointer;
            border: none;
            background: none;
        }

        .close:hover {
            color: #000;
        }

        .card-header {
            background-color: rgba(149, 0, 0, 1);
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 1rem;
            position: relative;
        }

        .card-header h1 {
            margin: 0;
            text-align: center;
            flex-grow: 1;
        }
        .info-icon {
            cursor: pointer;
            margin-left: auto; /* Garante que a imagem fique no extremo direito */
        }
