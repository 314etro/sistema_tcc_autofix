<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="adm.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arvo:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="veiculos_mecanico.css">
    <title>Veículos</title>
</head>

<body>
    <header>
        <img src="/img/logo.png" alt="Logo">
    </header>

    <div class="search-bar">
        <button class="back-button">
            <a href="/home_mecanico">
                <img src="/img/seta.png" alt="Voltar">
            </a>
        </button>
        <div class="search-input-container">
            <input type="text" id="searchInput" placeholder="Buscar veículo">
            <img src="/img/lupa.png" alt="Pesquisar">
        </div>
        <!-- Botão para abrir o modal -->
        <button class="new-client-button button" data-toggle="modal" data-target="#newClientModal">Novo Veículo</button>
    </div>

    <div class="main-content">
        <!-- Card de Cliente -->
        <div class="mechanic-box">
            <h2>Dados do Cliente:</h2>
            <% clientes.forEach((cliente)=> { %>
            <div class="mechanic-info">
                <p><strong>Nome:</strong> <%= cliente.nome %></p>
                <p><strong>Número:</strong> <%= cliente.telefone %></p>
                <p><strong>E-mail:</strong> <%= cliente.email %></p>
                <p><strong>CPF:</strong> <%= cliente.cpf_cliente %></p>
                <button class="delete-client-button" onclick="openDeleteModal()">Excluir Cliente</button>
            </div>
            <% }) %>
        </div>

        <!-- Cards de Veículos -->
        <div class="cards-section">
            <h2>Veículos:</h2>
            <div class="cards-container" id="cardsContainer">
                <% veiculos.forEach((veiculo)=> { %>
                <a href="/checklist/<%= veiculo.placa %>">
                    <div class="card">
                        <h3><%= veiculo.marca %> <%= veiculo.modelo %></h3>
                        <h1><%= veiculo.placa %></h1>
                    </div>
                </a>
                <% }) %>
            </div>
        </div>
    </div>

    <!-- Modal de Novo Veículo -->
    <div class="modal fade" id="newClientModal" tabindex="-1" role="dialog" aria-labelledby="newClientModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newClientModalLabel">Novo Veículo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="newVehicleForm">
                        <div class="form-group">
                            <label for="marca">Marca</label>
                            <input type="text" class="form-control" id="marca" placeholder="Marca do veículo" required>
                        </div>
                        <div class="form-group">
                            <label for="modelo">Modelo</label>
                            <input type="text" class="form-control" id="modelo" placeholder="Modelo do veículo" required>
                        </div>
                        <div class="form-group">
                            <label for="placa">Placa</label>
                            <input type="text" class="form-control" id="placa" placeholder="Placa do veículo" required>
                        </div>
                        <div class="form-group">
                            <label for="ano">Ano</label>
                            <input type="number" class="form-control" id="ano" placeholder="Ano do veículo" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" form="newVehicleForm">Salvar Veículo</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS, jQuery e Popper.js -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script>
        // Função para buscar veículos
        function searchVehicles() {
            const searchValue = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                const vehicleInfo = card.innerText.toLowerCase();
                if (vehicleInfo.includes(searchValue)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Associar a função de busca ao campo de busca
        document.getElementById('searchInput').addEventListener('input', searchVehicles);
    </script>

    <style>
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arvo', serif;
}

body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
    padding: 0;
}

/* Header */
header {
    background-color: #000000;
    color: white;
    padding: 8px;
    text-align: center;
}

header img {
    width: 200px;
    height: auto;
}

/* Main Content */
.main-content {
    display: flex;
    flex-direction: row;
    gap: 20px;
    padding: 20px;
}

.mechanic-box {
    flex: 1;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 2px solid #ccc;
    box-sizing: border-box;
    overflow: auto;
    margin-left: 70px;
}

/* Ajuste de responsividade para o card de cliente */
@media (max-width: 768px) {
    .main-content {
        flex-direction: column;
    }

    .mechanic-box {
        margin-left: 0;
        margin-bottom: 20px;
    }

    .mechanic-info p {
        font-size: 14px;
    }
}

/* Cards Section */
.cards-section {
    flex: 2;
    padding: 20px;
}

.cards-section h2 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
}

.cards-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 10px;
    box-sizing: border-box;
}

/* Card de Veículos */
.card {
    background-color: #ffffff;
    border: 5px solid #000000;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    height: 130px;
    width: 100%;
    max-width: 240px;
    font-size: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-sizing: border-box;
    cursor: pointer;
}

.card h1 {
    margin: 20px;
    font-size: 35px;
    font-weight: bold;
    color: black;
    text-decoration: none;
    text-decoration-color: transparent;
    transition: text-decoration-color 0.3s ease, color 0.3s ease;
}

/* Estilo ao passar o mouse sobre o card */
.card:hover h1 {
    text-decoration: underline;
    text-decoration-color: black;
}

.card h3 {
    margin: 0;
    font-size: 20px;
    color: white;
    background-color: #003688;
    padding: 5px;
    border-radius: 3%;
}

/* Ajuste responsivo para os cards de veículos */
@media (max-width: 768px) {
    .cards-container {
        grid-template-columns: 1fr;
    }

    .card h1 {
        font-size: 28px;
    }
}

/* Botões e responsividade para a barra de busca */
.search-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 25px;
    margin-top: 20px;
}

.search-bar .back-button {
    margin-right: 30px;
    background-color: transparent;
    border: none;
    cursor: pointer;
}

.search-bar .back-button img {
    width: 24px;
    height: 24px;
}

.search-bar .search-input-container {
    position: relative;
    width: 50%;
}

.search-bar input[type="text"] {
    width: 100%;
    padding: 10px 10px 10px 20px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 20px;
    outline: none;
}

.search-bar .search-input-container img {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    cursor: pointer;
}

.new-client-button,
.button {
    display: inline-block;
    padding: 10px 10px;
    border-radius: 15px;
    background-color: #0D6EFD;
    color: #ffffff;
    font-size: 16px;
    text-align: center;
    border: none;
    margin-left: 10px;
}

.delete-client-button {
background-color: #dc3545;
color: white;
border: none;
border-radius: 5px;
padding: 10px 15px;
cursor: pointer;
font-size: 16px;
transition: background-color 0.3s;
margin-top: 20px;
}

.delete-client-button:hover {
background-color: #c82333;
}
    </style>

</body>

</html>